<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>io.github.dyslechtchitect.tfcbm</id>
    <metadata_license>CC0-1.0</metadata_license>
    <project_license>GPL-3.0-or-later</project_license>
    <name>TFCBM</name>
    <summary>The * Clipboard Manager</summary>

    <description>
        <p>
        Stores clipboard history, supports tags, favorites, search and more - which is useful if you copy things more than once.
        </p>
        <p>Features:</p>
        <ul>
            <li>Track clipboard history</li>
            <li>Support for text, images, and files</li>
            <li>Quick search and filtering</li>
            <li>Tag and organize clipboard items</li>
            <li>Keyboard shortcuts for quick workflows</li>
        </ul>
    </description>

    <launchable type="desktop-id">io.github.dyslechtchitect.tfcbm.desktop</launchable>

    <screenshots>
