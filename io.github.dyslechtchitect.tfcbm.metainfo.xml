    <content_rating type="oars-1.1"/>

    <releases>
        <release version="1.1.5" date="2026-02-21">
            <description>
                <p>Usability fix</p>
                <ul>
                    <li>Add "Don't show this again" option to the Keyboard Shortcut Setup dialog, fixing repeated popups on unsupported desktop environments (e.g. Sway)</li>
                </ul>
            </description>
        </release>
        <release version="1.1.1" date="2026-02-16">
            <description>
                <p>Theme bugfixes</p>
                <ul>
                    <li>Fix tag colors getting muted by theme</li>
                    <li>Fix light theme readability and contrast</li>
                    <li>Fix zombie/orphan processes on restart</li>
                    <li>Fix transparency slider crash</li>
                </ul>
            </description>
        </release>
        <release version="1.1.0" date="2026-02-15">
            <description>
                <p>Theme settings</p>
                <ul>
                    <li>Background color tint with 10-color palette</li>
                    <li>Window transparency toggle and opacity slider</li>
                    <li>Adapts to OS light/dark theme automatically</li>
                    <li>Settings persist across sessions</li>
                </ul>
            </description>
        </release>
        <release version="1.0" date="2026-01-23">
            <description>
                <p>Initial release</p>
                <ul>
                    <li>Clipboard history tracking</li>
                    <li>Text, image, and file support</li>
                    <li>Search and filtering</li>
                    <li>Tag management</li>
                    <li>GTK4-based clipboard monitoring</li>
                </ul>
            </description>
        </release>
    </releases>

    <requires>
